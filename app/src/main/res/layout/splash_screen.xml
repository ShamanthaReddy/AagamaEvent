<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#69F0AE"
    android:orientation="vertical"
    tools:context="com.example.vasanth.hambutton.SplashScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/welcome_in_splash"
        android:textColor="#1C2833"
        android:textSize="30sp"
         />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/styling_for_splash_logo"
        android:src="@drawable/logo_for_splash"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/changingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="@string/changing_text_in_splash"
        android:textColor="#1C2833"
        android:textSize="28sp"
        android:fontFamily="cursive"
        android:textStyle="bold"
         />


</RelativeLayout>
